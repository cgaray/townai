<div class="space-y-8">
  <%# Page Header %>
  <div class="flex flex-col sm:flex-row sm:items-end sm:justify-between gap-4">
    <div>
      <h1 class="text-4xl font-extrabold tracking-tight">
        <span class="text-gradient-primary">Governing Bodies</span>
      </h1>
      <p class="text-base-content/60 mt-2 text-lg">Town boards, committees, and commissions</p>
    </div>

    <% if @governing_bodies.any? %>
      <div class="badge badge-lg badge-ghost font-semibold">
        <%= icon("building-library", size: "w-4 h-4") %>
        <span class="ml-1"><%= pluralize(@governing_bodies.size, "body", "bodies") %></span>
      </div>
    <% end %>
  </div>

  <%# Governing Bodies Grid %>
  <% if @governing_bodies.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
      <% @governing_bodies.each do |gb| %>
        <%= link_to gb, class: "card bg-base-100 border border-base-200 card-hover border-t-brand group" do %>
          <div class="card-body p-5">
            <div class="flex items-start gap-3">
              <%= icon_in_circle("building-library", type: :brand, size: :lg) %>
              <div class="min-w-0 flex-1">
                <h2 class="card-title text-lg font-bold group-hover:text-primary transition-colors leading-tight">
                  <%= gb.name %>
                </h2>
                <div class="flex items-center gap-4 mt-2 text-sm text-base-content/60">
                  <span class="flex items-center gap-1">
                    <%= icon("document-text", size: "w-4 h-4") %>
                    <%= pluralize(gb.documents_count, "document") %>
                  </span>
                  <span class="flex items-center gap-1">
                    <%= icon("users", size: "w-4 h-4") %>
                    <%= pluralize(gb.people_count, "person", "people") %>
                  </span>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <%# Empty State %>
    <div class="card bg-gradient-to-br from-base-200/50 to-base-200 border border-base-300">
      <div class="card-body items-center text-center py-20">
        <div class="icon-circle icon-circle-xl icon-circle-default mb-6 shadow-lg">
          <%= icon("building-library", size: "w-10 h-10") %>
        </div>
        <h2 class="text-2xl font-bold">No governing bodies yet</h2>
        <p class="text-base-content/60 max-w-md mt-2 leading-relaxed">
          Governing bodies will be created automatically when documents are processed.
        </p>
      </div>
    </div>
  <% end %>
</div>
