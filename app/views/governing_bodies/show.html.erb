<div class="space-y-8">
  <%# Page Header %>
  <div class="flex flex-col gap-4">
    <%= link_to governing_bodies_path, class: "flex items-center gap-1 text-sm text-base-content/60 hover:text-primary transition-colors w-fit" do %>
      <%= icon("chevron-left", size: "w-4 h-4") %>
      <span>All Governing Bodies</span>
    <% end %>

    <div class="flex flex-col sm:flex-row sm:items-end sm:justify-between gap-4">
      <div class="flex items-center gap-4">
        <%= icon_in_circle("building-library", type: :brand, size: :xl) %>
        <div>
          <h1 class="text-3xl font-extrabold tracking-tight"><%= @governing_body.name %></h1>
          <div class="flex items-center gap-4 mt-1 text-base-content/60">
            <span class="flex items-center gap-1">
              <%= icon("document-text", size: "w-4 h-4") %>
              <%= pluralize(@governing_body.documents_count, "document") %>
            </span>
            <span class="flex items-center gap-1">
              <%= icon("users", size: "w-4 h-4") %>
              <%= pluralize(@governing_body.people_count, "person", "people") %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%# Meeting Timeline %>
  <%= render "shared/meeting_timeline",
             meetings_by_year: @meetings_by_year,
             title: "Meeting History",
             count_label: "meetings",
             item_partial: "governing_bodies/timeline_item" %>

  <%# People Section %>
  <div class="space-y-4">
    <h2 class="text-xl font-bold flex items-center gap-2">
      <%= icon("users", size: "w-5 h-5", class: "text-primary") %>
      People
    </h2>

    <% if @people.any? %>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3">
        <% @people.each do |person| %>
          <%= link_to person, class: "card bg-base-100 border border-base-200 card-hover group" do %>
            <div class="card-body p-3">
              <div class="flex items-center gap-3">
                <div class="avatar-initials <%= avatar_color_class(person.name) %>">
                  <%= avatar_initials(person.name) %>
                </div>
                <div class="min-w-0 flex-1">
                  <div class="font-medium text-sm group-hover:text-primary transition-colors truncate">
                    <%= person.name %>
                  </div>
                  <div class="text-xs text-base-content/50">
                    <%= pluralize(person.document_appearances_count, "appearance") %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>

      <%# People Pagination %>
      <% if @pagy_people.pages > 1 %>
        <div class="flex justify-center mt-4">
          <div class="join">
            <% if @pagy_people.prev %>
              <%= link_to governing_body_path(@governing_body, people_page: @pagy_people.prev), class: "join-item btn btn-sm" do %>
                <%= icon("chevron-left", size: "w-4 h-4") %>
              <% end %>
            <% else %>
              <span class="join-item btn btn-sm btn-disabled"><%= icon("chevron-left", size: "w-4 h-4") %></span>
            <% end %>
            <span class="join-item btn btn-sm btn-ghost pointer-events-none">
              Page <%= @pagy_people.page %> of <%= @pagy_people.pages %>
            </span>
            <% if @pagy_people.next %>
              <%= link_to governing_body_path(@governing_body, people_page: @pagy_people.next), class: "join-item btn btn-sm" do %>
                <%= icon("chevron-right", size: "w-4 h-4") %>
              <% end %>
            <% else %>
              <span class="join-item btn btn-sm btn-disabled"><%= icon("chevron-right", size: "w-4 h-4") %></span>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="text-base-content/50 italic">No people recorded yet</div>
    <% end %>
  </div>
</div>
