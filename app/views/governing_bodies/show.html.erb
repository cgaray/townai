<div class="space-y-8">
  <%# Page Header %>
  <div class="flex flex-col gap-4">
    <%= render "shared/back_link", path: governing_bodies_path, text: "All Governing Bodies" %>

    <div class="flex flex-col sm:flex-row sm:items-end sm:justify-between gap-4">
      <div class="flex items-center gap-4">
        <%= icon_in_circle("building-library", type: :brand, size: :xl) %>
        <div>
          <h1 class="text-3xl font-extrabold tracking-tight"><%= @governing_body.name %></h1>
          <div class="flex items-center gap-4 mt-1 text-base-content/60">
            <span class="flex items-center gap-1">
              <%= icon("document-text", size: "w-4 h-4") %>
              <%= pluralize(@governing_body.documents_count, "document") %>
            </span>
            <span class="flex items-center gap-1">
              <%= icon("users", size: "w-4 h-4") %>
              <%= pluralize(@governing_body.people_count, "person", "people") %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%# Meeting Timeline %>
  <%= render "shared/meeting_timeline",
             meetings_by_year: @meetings_by_year,
             title: "Meeting History",
             count_label: "meetings",
             item_partial: "governing_bodies/timeline_item" %>

  <%# People Section %>
  <div class="space-y-4">
    <%= section_header("People", icon_name: "users") %>

    <% if @people.any? %>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3">
        <% @people.each do |person| %>
          <%= link_to person, class: "card bg-base-100 border border-base-200 card-hover group" do %>
            <div class="card-body p-3">
              <div class="flex items-center gap-3">
                <%= avatar(person.name) %>
                <div class="min-w-0 flex-1">
                  <div class="font-medium text-sm group-hover:text-primary transition-colors truncate">
                    <%= person.name %>
                  </div>
                  <div class="text-xs text-base-content/50">
                    <%= pluralize(person.document_appearances_count, "appearance") %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>

      <%# People Pagination %>
      <%= render "shared/pagination", pagy: @pagy_people, url_builder: ->(page) { governing_body_path(@governing_body, people_page: page) } %>
    <% else %>
      <div class="text-base-content/50 italic">No people recorded yet</div>
    <% end %>
  </div>
</div>
