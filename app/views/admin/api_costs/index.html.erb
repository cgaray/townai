<%# app/views/admin/api_costs/index.html.erb %>
<div class="space-y-8">
  <%# Page Header %>
  <%= render "shared/page_header",
             title: "API Costs",
             subtitle: "OpenRouter API usage and cost tracking" %>

  <%# Stats Cards %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
    <%= render "shared/stat_card",
               icon_name: "currency-dollar",
               title: "Total Cost",
               value: number_to_currency(@total_cost, precision: 4),
               subtitle: "#{number_with_precision(@total_cost, precision: 4)} credits",
               icon_class: "icon-circle-brand" %>

    <%= render "shared/stat_card",
               icon_name: "calendar",
               title: "This Month",
               value: number_to_currency(@total_cost_this_month, precision: 4),
               subtitle: "#{number_with_precision(@total_cost_this_month, precision: 4)} credits",
               icon_class: "icon-circle-agenda" %>

    <%= render "shared/stat_card",
               icon_name: "document",
               title: "Avg Per Document",
               value: number_to_currency(@average_cost_per_document, precision: 4),
               subtitle: "#{number_with_precision(@average_cost_per_document, precision: 4)} credits",
               icon_class: "icon-circle-minutes" %>

    <% success_rate = @total_calls > 0 ? (@successful_calls.to_f / @total_calls * 100) : 0 %>
    <%= render "shared/stat_card",
               icon_name: "check-circle",
               title: "Success Rate",
               value: number_to_percentage(success_rate, precision: 1),
               subtitle: "#{@successful_calls}/#{@total_calls} calls",
               icon_class: @failed_calls > 0 ? "bg-warning/20 text-warning" : "bg-success/20 text-success" %>
  </div>

  <%# Cost by Model %>
  <% if @cost_by_model.any? %>
    <div class="card bg-base-100 border border-base-200 shadow-sm">
      <div class="card-body p-5">
        <h2 class="text-lg font-bold mb-4 flex items-center gap-2">
          <%= icon("list-bullet", size: "w-5 h-5", class: "text-primary") %>
          Cost by Model
        </h2>
        <div class="overflow-x-auto">
          <table class="table table-sm">
            <thead>
              <tr>
                <th>Model</th>
                <th class="text-right">Cost (Credits)</th>
                <th class="text-right">Cost (USD)</th>
              </tr>
            </thead>
            <tbody>
              <% @cost_by_model.each do |model, cost| %>
                <tr>
                  <td class="font-mono text-sm"><%= model %></td>
                  <td class="text-right"><%= number_with_precision(cost, precision: 6) %></td>
                  <td class="text-right"><%= number_to_currency(cost, precision: 4) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>

  <%# Recent API Calls %>
  <div class="card bg-base-100 border border-base-200 shadow-sm">
    <div class="card-body p-5">
      <h2 class="text-lg font-bold mb-4 flex items-center gap-2">
        <%= icon("clock", size: "w-5 h-5", class: "text-primary") %>
        Recent API Calls
        <span class="badge badge-ghost badge-sm font-normal"><%= @recent_calls.size %></span>
      </h2>

      <% if @recent_calls.any? %>
        <div class="overflow-x-auto">
          <table class="table table-sm">
            <thead>
              <tr>
                <th>Time</th>
                <th>Document</th>
                <th>Model</th>
                <th>Operation</th>
                <th class="text-right">Tokens</th>
                <th class="text-right">Cost</th>
                <th class="text-right">Response Time</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% @recent_calls.each do |call| %>
                <tr>
                  <td class="text-xs text-base-content/70">
                    <%= call.created_at.strftime("%b %d %H:%M") %>
                  </td>
                  <td>
                    <% if call.document %>
                      <%= link_to call.document.source_file_name.truncate(30), document_path(call.document), class: "link link-primary text-sm" %>
                    <% else %>
                      <span class="text-base-content/50 text-sm">-</span>
                    <% end %>
                  </td>
                  <td class="font-mono text-xs"><%= call.model.split("/").last %></td>
                  <td class="text-sm"><%= call.operation %></td>
                  <td class="text-right text-sm">
                    <% if call.total_tokens %>
                      <%= number_with_delimiter(call.total_tokens) %>
                      <span class="text-xs text-base-content/50">
                        (<%= call.prompt_tokens %>/<%= call.completion_tokens %>)
                      </span>
                    <% else %>
                      -
                    <% end %>
                  </td>
                  <td class="text-right font-mono text-sm">
                    <% if call.cost_credits %>
                      <%= number_to_currency(call.cost_credits, precision: 4) %>
                    <% else %>
                      -
                    <% end %>
                  </td>
                  <td class="text-right text-sm">
                    <% if call.response_time_ms && call.response_time_ms > 0 %>
                      <%= number_with_delimiter(call.response_time_ms) %>ms
                    <% else %>
                      -
                    <% end %>
                  </td>
                  <td>
                    <% if call.status == "success" %>
                      <span class="badge badge-success badge-sm">Success</span>
                    <% else %>
                      <span class="badge badge-error badge-sm" title="<%= call.error_message %>">Error</span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-8 text-base-content/50">
          <p>No API calls recorded yet.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
