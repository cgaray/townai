<%# Tab navigation for audit log pages %>
<%# locals: (current_tab:) %>
<div role="tablist" class="tabs tabs-boxed bg-base-200 mb-6">
  <%= link_to admin_admin_logs_path,
              role: "tab",
              class: "tab #{current_tab == :admin ? 'tab-active' : ''}" do %>
    <%= icon("clipboard-document-list", size: "w-4 h-4") %>
    <span class="ml-1">Admin Actions</span>
  <% end %>
  <%= link_to admin_authentication_logs_path,
              role: "tab",
              class: "tab #{current_tab == :authentication ? 'tab-active' : ''}" do %>
    <%= icon("shield-check", size: "w-4 h-4") %>
    <span class="ml-1">Authentication</span>
  <% end %>
  <%= link_to admin_document_events_path,
              role: "tab",
              class: "tab #{current_tab == :documents ? 'tab-active' : ''}" do %>
    <%= icon("document", size: "w-4 h-4") %>
    <span class="ml-1">Document Events</span>
  <% end %>
</div>
