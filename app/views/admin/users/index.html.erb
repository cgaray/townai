<div class="space-y-8">
  <% invite_button = link_to(new_admin_user_path, class: "btn btn-primary btn-sm gap-2") do %>
    <%= icon("user-plus", size: "w-4 h-4") %>
    Invite User
  <% end %>
  <%= render "shared/page_header",
             title: "Users",
             subtitle: "Manage user accounts and permissions",
             badge: invite_button %>

  <div class="card bg-base-100 border border-base-200 shadow-sm">
    <div class="card-body p-5">
      <% if @users.any? %>
        <div class="overflow-x-auto">
          <table class="table">
            <thead>
              <tr>
                <th>Email</th>
                <th>Role</th>
                <th>Created</th>
                <th class="text-right">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td>
                    <div class="flex items-center gap-3">
                      <%= avatar(user.email, size: :sm) %>
                      <div>
                        <div class="font-medium"><%= user.email %></div>
                        <% if user == current_user %>
                          <span class="text-xs text-base-content/50">(you)</span>
                        <% end %>
                      </div>
                    </div>
                  </td>
                  <td>
                    <% if user.admin? %>
                      <span class="badge badge-primary badge-sm gap-1">
                        <%= icon("shield-check", size: "w-3 h-3") %>
                        Admin
                      </span>
                    <% else %>
                      <span class="badge badge-ghost badge-sm">User</span>
                    <% end %>
                  </td>
                  <td class="text-sm text-base-content/70">
                    <%= user.created_at.strftime("%b %d, %Y") %>
                  </td>
                  <td class="text-right">
                    <div class="flex items-center justify-end gap-2">
                      <%= button_to send_magic_link_admin_user_path(user),
                                    method: :post,
                                    class: "btn btn-ghost btn-xs gap-1",
                                    title: "Send login link",
                                    data: { turbo_confirm: "Send a login link to #{user.email}?" } do %>
                        <%= icon("paper-airplane", size: "w-4 h-4") %>
                        <span class="hidden sm:inline">Send Link</span>
                      <% end %>

                      <%= link_to edit_admin_user_path(user),
                                  class: "btn btn-ghost btn-xs gap-1",
                                  title: "Edit user" do %>
                        <%= icon("pencil", size: "w-4 h-4") %>
                        <span class="hidden sm:inline">Edit</span>
                      <% end %>

                      <% unless user == current_user %>
                        <%= button_to admin_user_path(user),
                                      method: :delete,
                                      class: "btn btn-ghost btn-xs text-error gap-1",
                                      title: "Delete user",
                                      data: { turbo_confirm: "Are you sure you want to delete #{user.email}? This action cannot be undone." } do %>
                          <%= icon("trash", size: "w-4 h-4") %>
                          <span class="hidden sm:inline">Delete</span>
                        <% end %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <%= render "shared/empty_state",
                   icon_name: "users",
                   title: "No users yet",
                   description: "Invite your first user to get started." %>
      <% end %>
    </div>
  </div>
</div>
