<%# Shared empty state card with icon, title, description, and optional action %>
<%# locals: (icon_name:, title:, description:, icon_type: :default, action: nil) %>
<div class="card bg-gradient-to-br from-base-200/50 to-base-200 border border-base-300">
  <div class="card-body items-center text-center py-20">
    <% circle_class = case icon_type.to_s
       when "error" then "bg-error/20 text-error"
       when "brand" then "icon-circle-brand"
       else "icon-circle-default shadow-lg"
       end %>
    <div class="icon-circle icon-circle-xl <%= circle_class %> mb-6">
      <%= icon(icon_name, size: "w-10 h-10") %>
    </div>
    <h2 class="text-2xl font-bold"><%= title %></h2>
    <p class="text-base-content/60 max-w-md mt-2 leading-relaxed"><%= description %></p>
    <% if action.present? %>
      <div class="card-actions mt-8">
        <%= action %>
      </div>
    <% end %>
  </div>
</div>
