<%# app/views/attendees/index.html.erb %>
<div class="space-y-6">
  <%# Header %>
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-extrabold tracking-tight flex items-center gap-3">
        <%= icon("users", size: "w-7 h-7", class: "text-primary") %>
        <span class="text-gradient-primary">Attendees</span>
      </h1>
      <p class="text-base-content/60 mt-1">
        <%= @total_attendees %> people across <%= @governing_body_counts.size %> governing bodies
      </p>
    </div>
  </div>

  <%# Governing Body Filter Pills %>
  <% if @governing_body_counts.any? %>
    <div class="flex flex-wrap gap-2">
      <% @governing_body_counts.sort_by { |_, count| -count }.each do |body, count| %>
        <span class="badge badge-outline gap-1.5 py-3 px-3">
          <%= icon("building-library", size: "w-3.5 h-3.5") %>
          <span><%= body %></span>
          <span class="badge badge-ghost badge-sm"><%= count %></span>
        </span>
      <% end %>
    </div>
  <% end %>

  <%# Attendees Grid %>
  <% if @attendees.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
      <% @attendees.each do |attendee| %>
        <%= link_to attendee_path(attendee), class: "card bg-base-100 border border-base-200 shadow-sm card-hover" do %>
          <div class="card-body p-4">
            <div class="flex items-start gap-3">
              <div class="avatar-initials avatar-initials-lg <%= avatar_color_class(attendee.name) %>">
                <%= avatar_initials(attendee.name) %>
              </div>
              <div class="flex-1 min-w-0">
                <h3 class="font-bold text-base truncate"><%= attendee.name %></h3>
                <p class="text-xs text-base-content/60 truncate mt-0.5">
                  <%= attendee.primary_governing_body %>
                </p>

                <div class="flex flex-wrap items-center gap-2 mt-2">
                  <span class="badge badge-ghost badge-sm gap-1">
                    <%= icon("document", size: "w-3 h-3") %>
                    <%= attendee.document_appearances_count %> doc<%= attendee.document_appearances_count == 1 ? "" : "s" %>
                  </span>

                  <% if attendee.roles_held.any? %>
                    <% attendee.roles_held.first(2).each do |role| %>
                      <%= role_badge(role) %>
                    <% end %>
                  <% end %>
                </div>

                <% if attendee.first_seen_at && attendee.last_seen_at %>
                  <p class="text-xs text-base-content/50 mt-2">
                    <% if attendee.first_seen_at == attendee.last_seen_at %>
                      <%= attendee.first_seen_at.strftime("%b %Y") %>
                    <% else %>
                      <%= attendee.first_seen_at.strftime("%b %Y") %> - <%= attendee.last_seen_at.strftime("%b %Y") %>
                    <% end %>
                  </p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="card bg-gradient-to-br from-base-200/50 to-base-200 border border-base-300">
      <div class="card-body items-center text-center py-16">
        <div class="icon-circle icon-circle-xl icon-circle-default mb-4">
          <%= icon("users", size: "w-10 h-10") %>
        </div>
        <h2 class="text-xl font-bold">No Attendees Yet</h2>
        <p class="text-base-content/60 max-w-md mt-2">
          Attendees will appear here as documents are processed. Each attendee from meeting minutes and agendas will be tracked.
        </p>
        <%= link_to documents_path, class: "btn btn-primary mt-4" do %>
          <%= icon("document", size: "w-4 h-4") %>
          View Documents
        <% end %>
      </div>
    </div>
  <% end %>
</div>
