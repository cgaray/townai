<%# app/views/documents/index.html.erb %>
<div class="space-y-8">
  <%# Page Header %>
  <% header_badge = capture do %>
    <% if @documents.any? %>
      <div class="flex items-center gap-3">
        <div class="badge badge-lg badge-ghost font-semibold">
          <%= icon("document-text", size: "w-4 h-4") %>
          <span class="ml-1"><%= pluralize(@documents.size, "document") %></span>
        </div>
        <% pending_count = @status_counts["pending"] || 0 %>
        <% processing_count = (@status_counts["extracting_text"] || 0) + (@status_counts["extracting_metadata"] || 0) %>
        <% if pending_count > 0 || processing_count > 0 %>
          <div class="badge badge-lg badge-warning font-semibold animate-pulse-subtle">
            <span class="loading loading-spinner loading-xs"></span>
            <span><%= pending_count + processing_count %> processing</span>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
  <%= render "shared/page_header",
             title: "Documents",
             subtitle: "Town meeting agendas and minutes",
             badge: header_badge %>

  <%# Documents Grid or Empty State %>
  <% if @documents.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
      <% @documents.each do |doc| %>
        <% doc_type = doc.metadata_field("document_type") %>
        <% card_opacity = doc.complete? ? "" : "opacity-60 hover:opacity-100" %>
        <%= link_to town_document_path(current_town, doc), class: "card bg-base-100 border border-base-200 card-hover #{document_type_border_class(doc_type)} #{card_opacity} group transition-opacity" do %>
          <div class="card-body p-5">
            <%# Document type icon and governing body %>
            <div class="flex items-start justify-between gap-3">
              <div class="flex items-start gap-3">
                <%= document_type_icon(doc_type, size: :lg) %>
                <div class="min-w-0">
                  <h2 class="card-title text-lg font-bold group-hover:text-primary transition-colors leading-tight">
                    <%= doc.metadata_field("governing_body") || "Unknown Body" %>
                  </h2>
                  <% if doc_type %>
                    <span class="badge badge-outline badge-sm px-3 py-3 mt-1.5 font-medium"><%= doc_type&.capitalize %></span>
                  <% end %>
                </div>
              </div>
              <%= status_badge(doc.status) %>
            </div>

            <%# Meeting date %>
            <div class="mt-4 flex items-center gap-2 text-sm text-base-content/70 font-medium">
              <%= icon("calendar", size: "w-4 h-4", class: "text-primary/60") %>
              <% if doc.metadata_field("meeting_date") %>
                <%= Date.parse(doc.metadata_field("meeting_date")).strftime("%B %d, %Y") rescue doc.metadata_field("meeting_date") %>
              <% else %>
                <span class="italic text-base-content/40">Date not extracted</span>
              <% end %>
            </div>

            <%# Abstract preview %>
            <% if doc.metadata_field("abstract").present? %>
              <p class="text-sm text-base-content/60 mt-3 line-clamp-2 leading-relaxed">
                <%= truncate(doc.metadata_field("abstract"), length: 120) %>
              </p>
            <% end %>

            <%# File name footer %>
            <div class="mt-auto pt-4 border-t border-base-200/60">
              <div class="flex items-center gap-2">
                <%= icon("file", size: "w-3.5 h-3.5", class: "text-base-content/40") %>
                <span class="text-xs font-mono text-base-content/40 truncate">
                  <%= doc.source_file_name %>
                </span>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <%# Pagination %>
    <%= render "shared/pagination", pagy: @pagy, url_builder: ->(page) { pagy_url_for(@pagy, page) } %>
  <% else %>
    <%# Empty State %>
    <% action_content = capture do %>
      <div class="bg-base-100 border border-base-300 rounded-lg px-4 py-3 shadow-sm">
        <div class="text-xs text-base-content/50 mb-1">Run this command to import documents:</div>
        <code class="text-sm font-mono font-semibold text-primary">bin/rails import:documents</code>
      </div>
    <% end %>
    <%= render "shared/empty_state",
               icon_name: "folder-open",
               title: "No documents yet",
               description: "Upload your first town meeting document to get started. We'll automatically extract metadata like attendees, topics, and actions.",
               action: action_content %>
  <% end %>
</div>
