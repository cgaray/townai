<%# app/views/documents/show.html.erb %>
<div class="space-y-8">
  <%# Back navigation %>
  <%= render "shared/back_link", path: documents_path, text: "Back to Documents" %>

  <% if @document.extracted_metadata.present? %>
    <% meta = JSON.parse(@document.extracted_metadata) rescue {} %>
    <% doc_type = meta["document_type"] %>

    <%# Header Card with gradient accent %>
    <div class="card bg-base-100 border border-base-200 shadow-sm overflow-hidden <%= document_type_border_class(doc_type) %>">
      <div class="card-body p-6">
        <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-4">
          <div class="flex items-start gap-4">
            <%= document_type_icon(doc_type, size: :xl) %>
            <div>
              <h1 class="text-2xl font-extrabold tracking-tight"><%= meta["governing_body"] || "Unknown Body" %></h1>
              <div class="flex flex-wrap items-center gap-3 mt-3">
                <% if doc_type %>
                  <span class="badge badge-outline px-3 py-3 font-semibold"><%= doc_type&.capitalize %></span>
                <% end %>
                <% if meta["meeting_date"] %>
                  <span class="flex items-center gap-1.5 text-sm text-base-content/70 font-medium">
                    <%= icon("calendar", size: "w-4 h-4", class: "text-primary/60") %>
                    <%= Date.parse(meta["meeting_date"]).strftime("%B %d, %Y") rescue meta["meeting_date"] %>
                  </span>
                <% end %>
                <% if meta["meeting_time"] %>
                  <span class="flex items-center gap-1.5 text-sm text-base-content/70 font-medium">
                    <%= icon("clock", size: "w-4 h-4", class: "text-primary/60") %>
                    <%= meta["meeting_time"] %>
                  </span>
                <% end %>
              </div>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <% if @document.pdf.attached? %>
              <%= link_to rails_blob_path(@document.pdf, disposition: :inline), target: "_blank", rel: "noopener", class: "btn btn-primary btn-sm gap-2" do %>
                <%= icon("eye", size: "w-4 h-4") %>
                View PDF
              <% end %>
            <% end %>
            <%= status_badge(@document.status) %>
          </div>
        </div>

        <% if meta["abstract"].present? %>
          <div class="mt-5">
            <p class="text-base-content/70 leading-relaxed border-l-4 border-primary/20 pl-4 italic">
              <%= meta["abstract"] %>
            </p>
            <%= render "shared/source_text_details", source_text: meta["abstract_source_text"] %>
          </div>
        <% end %>
      </div>
    </div>

    <%# Attendees Section %>
    <% if @document.document_attendees.any? || (meta["attendees"].present? && meta["attendees"].any?) %>
      <div class="space-y-4">
        <%= section_header("Attendees",
                          icon_name: "users",
                          count: @document.document_attendees.any? ? @document.document_attendees.size : meta["attendees"]&.size || 0) %>

        <div class="card bg-base-100 border border-base-200 shadow-sm">
          <div class="card-body p-5">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
              <% if @document.document_attendees.any? %>
                <%# Display linked attendees with links to their Person %>
                <% @document.document_attendees.each do |da| %>
                  <div class="space-y-1">
                    <div class="flex items-center gap-3">
                      <%= link_to person_path(da.attendee.person), class: "flex items-center gap-3 hover:opacity-80 transition-opacity" do %>
                        <%= avatar(da.attendee.person.name) %>
                        <div>
                          <div class="font-semibold text-sm hover:text-primary"><%= da.attendee.person.name %></div>
                          <% if da.role.present? %>
                            <div class="text-xs text-base-content/50 mt-0.5"><%= da.role.capitalize %></div>
                          <% end %>
                        </div>
                      <% end %>
                    </div>
                    <%= render "shared/source_text_details", source_text: da.source_text, label: "Show source", margin_class: "ml-12" %>
                  </div>
                <% end %>
              <% else %>
                <%# Fallback to raw metadata if no linked attendees %>
                <% (meta["attendees"] || []).each do |attendee| %>
                  <div class="space-y-1">
                    <div class="flex items-center gap-3">
                      <%= avatar(attendee["name"]) %>
                      <div>
                        <div class="font-semibold text-sm"><%= attendee["name"] %></div>
                        <% if attendee["role"].present? %>
                          <div class="text-xs text-base-content/50 mt-0.5"><%= attendee["role"]&.capitalize %></div>
                        <% end %>
                      </div>
                    </div>
                    <%= render "shared/source_text_details", source_text: attendee["source_text"], label: "Show source", margin_class: "ml-12" %>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <%# Agenda Items %>
    <% if meta["topics"].present? && meta["topics"].any? %>
      <div class="space-y-4">
        <%= section_header("Agenda Items", icon_name: "list-bullet", count: meta["topics"].size) %>

        <div class="card bg-base-100 border border-base-200 shadow-sm overflow-hidden">
          <div class="divide-y divide-base-200">
            <% meta["topics"].each_with_index do |topic, i| %>
              <% action = topic["action_taken"] %>
              <% has_action = action.present? && action.downcase != "none" %>
              <div class="px-5 py-4 hover:bg-base-50 transition-colors duration-150 <%= action_border_class(action) if has_action %>">
                <div class="flex items-start gap-4">
                  <div class="flex-none">
                    <span class="number-circle bg-primary/10 text-primary">
                      <%= i + 1 %>
                    </span>
                  </div>
                  <div class="flex-1 min-w-0">
                    <div class="flex flex-wrap items-center gap-2">
                      <h3 class="text-base font-bold text-base-content"><%= topic["title"] %></h3>
                      <% if has_action %>
                        <%= action_badge(action) %>
                      <% end %>
                    </div>
                    <% if topic["summary"].present? %>
                      <p class="text-sm text-base-content/60 mt-2 leading-relaxed"><%= topic["summary"] %></p>
                    <% end %>
                    <%= render "shared/source_text_details", source_text: topic["source_text"], margin_class: "mt-3" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

  <% else %>
    <%# No metadata yet %>
    <div class="card bg-gradient-to-br from-base-200/50 to-base-200 border border-base-300">
      <div class="card-body items-center text-center py-16">
        <% if @document.failed? %>
          <div class="icon-circle icon-circle-xl bg-error/20 text-error mb-4">
            <%= icon("x-circle", size: "w-10 h-10") %>
          </div>
          <h2 class="text-xl font-bold">Extraction Failed</h2>
          <p class="text-base-content/60 max-w-md mt-2">
            We couldn't extract metadata from this document. The file may be corrupted or in an unsupported format.
          </p>
          <div class="mt-6 flex flex-wrap gap-3 justify-center">
            <%= button_to retry_document_path(@document), method: :post, class: "btn btn-secondary gap-2" do %>
              <%= icon("arrow-path", size: "w-4 h-4") %>
              Retry Extraction
            <% end %>
            <% if @document.pdf.attached? %>
              <%= link_to rails_blob_path(@document.pdf, disposition: :inline), target: "_blank", rel: "noopener", class: "btn btn-outline gap-2" do %>
                <%= icon("eye", size: "w-4 h-4") %>
                View Original PDF
              <% end %>
            <% end %>
          </div>
        <% elsif @document.pending? || @document.extracting_text? || @document.extracting_metadata? %>
          <div class="icon-circle icon-circle-xl icon-circle-brand mb-4">
            <span class="loading loading-spinner loading-lg"></span>
          </div>
          <h2 class="text-xl font-bold">Processing Document</h2>
          <p class="text-base-content/60 max-w-md mt-2">
            We're extracting metadata from this document. This usually takes a few seconds.
          </p>
          <% if @document.pdf.attached? %>
            <div class="mt-6">
              <%= link_to rails_blob_path(@document.pdf, disposition: :inline), target: "_blank", rel: "noopener", class: "btn btn-outline btn-primary gap-2" do %>
                <%= icon("eye", size: "w-4 h-4") %>
                View PDF While Waiting
              <% end %>
            </div>
          <% end %>
        <% else %>
          <div class="icon-circle icon-circle-xl icon-circle-default mb-4">
            <%= icon("document", size: "w-10 h-10") %>
          </div>
          <h2 class="text-xl font-bold">No Metadata Available</h2>
          <p class="text-base-content/60 max-w-md mt-2">
            This document doesn't have any extracted metadata yet.
          </p>
          <% if @document.pdf.attached? %>
            <div class="mt-6">
              <%= link_to rails_blob_path(@document.pdf, disposition: :inline), target: "_blank", rel: "noopener", class: "btn btn-primary gap-2" do %>
                <%= icon("eye", size: "w-4 h-4") %>
                View Original PDF
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Document Info Footer %>
  <div class="border-t border-base-200 pt-6">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 text-sm text-base-content/50">
      <div class="flex items-center gap-2">
        <%= icon("file", size: "w-4 h-4") %>
        <span class="font-mono"><%= @document.source_file_name %></span>
      </div>
      <div class="flex items-center gap-2">
        <%= icon("clock", size: "w-4 h-4") %>
        <span>Added <%= time_ago_in_words(@document.created_at) %> ago</span>
      </div>
    </div>
  </div>

  <%# Raw Metadata Collapsible %>
  <% if @document.extracted_metadata.present? %>
    <div class="collapse collapse-arrow bg-base-200/50 border border-base-200 rounded-xl">
      <input type="checkbox" />
      <div class="collapse-title font-semibold flex items-center gap-2">
        <%= icon("document-text", size: "w-4 h-4") %>
        View Raw Metadata
      </div>
      <div class="collapse-content">
        <pre class="text-xs overflow-auto bg-base-100 p-4 rounded-lg mt-2 border border-base-200 font-mono"><%= JSON.pretty_generate(JSON.parse(@document.extracted_metadata)) rescue @document.extracted_metadata %></pre>
      </div>
    </div>
  <% end %>
</div>
