<%# Renders a single topic item %>
<%# locals: (topic:) %>
<div id="topic-<%= topic.id %>" class="px-5 py-4 hover:bg-base-50 transition-colors duration-150 <%= action_border_class(topic.action_taken) if topic.has_action? %>">
  <div class="flex items-start gap-4">
    <div class="flex-none">
      <span class="number-circle bg-primary/10 text-primary">
        <%= topic.display_position %>
      </span>
    </div>
    <div class="flex-1 min-w-0">
      <div class="flex flex-wrap items-center gap-2">
        <h3 class="text-base font-bold text-base-content"><%= topic.title %></h3>
        <% if topic.has_action? %>
          <%= action_badge(topic.action_taken) %>
        <% end %>
      </div>
      <% if topic.summary.present? %>
        <p class="text-sm text-base-content/60 mt-2 leading-relaxed"><%= topic.summary %></p>
      <% end %>
      <%= render "shared/source_text_details", source_text: topic.source_text, margin_class: "mt-3" %>
    </div>
  </div>
</div>
