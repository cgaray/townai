<%# Renders a single topic item on document show page %>
<%# locals: (topic:) %>
<div id="topic-<%= topic.id %>" class="px-5 py-4 hover:bg-base-50 transition-colors duration-150 <%= action_border_class(topic.action_taken) if topic.has_action? %>">
  <div class="flex items-start gap-4">
    <div class="flex-none">
      <span class="number-circle bg-primary/10 text-primary">
        <%= topic.display_position %>
      </span>
    </div>
    <div class="flex-1 min-w-0">
      <%= render "shared/topic_content", topic: topic %>
      <%= render "shared/source_text_details", source_text: topic.source_text, margin_class: "mt-3" %>
    </div>
  </div>
</div>
