<%# app/views/people/show.html.erb %>
<div class="space-y-8">
  <%# Back navigation %>
  <%= render "shared/back_link", path: town_people_path(current_town), text: "Back to People" %>

  <%# Profile Header %>
  <div class="card bg-base-100 border border-base-200 shadow-sm">
    <div class="card-body p-6">
      <div class="flex flex-col sm:flex-row sm:items-start gap-6">
        <%= avatar(@person.name, size: :xl) %>
        <div class="flex-1">
          <h1 class="text-2xl font-extrabold tracking-tight"><%= @person.name %></h1>
          <p class="text-base-content/60 mt-1 flex items-center gap-2">
            <%= icon("building-library", size: "w-4 h-4") %>
            <%= @person.primary_governing_body&.name || @person.governing_body_names.first %>
          </p>

          <div class="flex flex-wrap items-center gap-3 mt-4">
            <span class="badge badge-ghost gap-1.5 py-3">
              <%= icon("document", size: "w-4 h-4") %>
              <%= @person.document_appearances_count %> document appearance<%= @person.document_appearances_count == 1 ? "" : "s" %>
            </span>

            <% @person.roles_held.each do |role| %>
              <%= role_badge(role) %>
            <% end %>
          </div>

          <% if @person.first_seen_at && @person.last_seen_at %>
            <p class="text-sm text-base-content/60 mt-4 flex items-center gap-2">
              <%= icon("calendar", size: "w-4 h-4") %>
              <% if @person.first_seen_at == @person.last_seen_at %>
                Appeared on <%= @person.first_seen_at.strftime("%B %d, %Y") %>
              <% else %>
                Active from <%= @person.first_seen_at.strftime("%B %d, %Y") %> to <%= @person.last_seen_at.strftime("%B %d, %Y") %>
              <% end %>
            </p>
          <% end %>

          <% bodies = @person.governing_bodies %>
          <% if bodies.size > 1 %>
            <div class="mt-4">
              <p class="text-sm text-base-content/60 mb-2">Governing bodies:</p>
              <div class="flex flex-wrap gap-2">
                <% bodies.each do |body| %>
                  <%= link_to town_governing_body_path(current_town, body), class: "badge badge-outline badge-sm hover:badge-primary" do %>
                    <%= body.name %>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <%# Main content: Meeting Timeline %>
    <div class="lg:col-span-2">
      <%= render "shared/meeting_timeline",
                 meetings_by_year: @meetings_by_year,
                 title: "Meeting History",
                 count_label: "appearances",
                 item_partial: "people/timeline_item" %>
    </div>

    <%# Sidebar %>
    <div class="space-y-6">
      <%# Extracted Identities (for unmerging) %>
      <% if @attendees.size > 1 %>
        <div class="space-y-3">
          <h3 class="text-lg font-bold flex items-center gap-2">
            <%= icon("identification", size: "w-4 h-4", class: "text-secondary") %>
            Extracted Identities
            <span class="badge badge-ghost badge-sm font-normal"><%= @attendees.size %></span>
          </h3>
          <div class="card bg-base-100 border border-base-200 shadow-sm">
            <div class="card-body p-4">
              <p class="text-xs text-base-content/60 mb-3">
                This person was extracted from documents under these identities. Unmerge to separate them.
              </p>
              <div class="space-y-2">
                <% @attendees.each do |attendee| %>
                  <div class="flex items-center justify-between gap-2 p-2 bg-base-50 rounded-lg">
                    <div class="flex items-center gap-2 min-w-0">
                      <%= avatar(attendee.name, size: :sm) %>
                      <div class="min-w-0">
                        <p class="font-medium text-sm truncate"><%= attendee.name %></p>
                        <p class="text-xs text-base-content/50 truncate">
                          <%= attendee.governing_body&.name || attendee.governing_body_extracted %> &middot; <%= attendee.document_attendees.size %> doc<%= attendee.document_attendees.size == 1 ? "" : "s" %>
                        </p>
                      </div>
                    </div>
                    <%= button_to unmerge_admin_people_path(attendee_id: attendee.id),
                        method: :post,
                        class: "btn btn-xs btn-ghost",
                        data: { turbo_confirm: "Unmerge '#{attendee.name}' into a separate person?" } do %>
                      Unmerge
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <%# Co-people %>
      <%= render "shared/people_list",
                 people: @co_people,
                 title: "Frequently Seen With",
                 icon_name: "users",
                 icon_class: "text-primary",
                 subtitle_type: :governing_body %>

      <%# Potential Duplicates %>
      <% same_name = @potential_duplicates[:same_name] %>
      <% similar_name = @potential_duplicates[:similar_name] %>
      <% if same_name.any? || similar_name.any? %>
        <div class="space-y-3">
          <h3 class="text-lg font-bold flex items-center gap-2">
            <%= icon("exclamation-triangle", size: "w-4 h-4", class: "text-warning") %>
            Potential Duplicates
          </h3>
          <div class="card bg-warning/5 border border-warning/20 shadow-sm">
            <div class="card-body p-4">
              <div class="space-y-4">
                <% if same_name.any? %>
                  <div>
                    <p class="text-xs font-semibold text-base-content/60 uppercase tracking-wider mb-2">Same Name</p>
                    <div class="space-y-2">
                      <% same_name.each do |dup| %>
                        <div class="flex items-center justify-between gap-2 p-2 bg-base-100 rounded-lg">
                          <div class="flex items-center gap-2 min-w-0">
                            <%= avatar(dup.name, size: :sm) %>
                            <div class="min-w-0">
                              <p class="font-medium text-sm truncate"><%= dup.name %></p>
                              <p class="text-xs text-base-content/50 truncate"><%= dup.primary_governing_body&.name %></p>
                            </div>
                          </div>
                          <%= button_to merge_admin_people_path(source_id: dup.id, target_id: @person.id),
                              method: :post,
                              class: "btn btn-xs btn-warning btn-outline",
                              data: { turbo_confirm: "Merge #{dup.name} into #{@person.name}? This can be undone by unmerging." } do %>
                            Merge
                          <% end %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>

                <% if similar_name.any? %>
                  <div>
                    <p class="text-xs font-semibold text-base-content/60 uppercase tracking-wider mb-2">Similar Names</p>
                    <div class="space-y-2">
                      <% similar_name.each do |dup| %>
                        <div class="flex items-center justify-between gap-2 p-2 bg-base-100 rounded-lg">
                          <div class="flex items-center gap-2 min-w-0">
                            <%= avatar(dup.name, size: :sm) %>
                            <div class="min-w-0">
                              <p class="font-medium text-sm truncate"><%= dup.name %></p>
                              <p class="text-xs text-base-content/50 truncate"><%= dup.primary_governing_body&.name %></p>
                            </div>
                          </div>
                          <%= button_to merge_admin_people_path(source_id: dup.id, target_id: @person.id),
                              method: :post,
                              class: "btn btn-xs btn-warning btn-outline",
                              data: { turbo_confirm: "Merge #{dup.name} into #{@person.name}? This can be undone by unmerging." } do %>
                            Merge
                          <% end %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
