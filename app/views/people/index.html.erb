<%# app/views/people/index.html.erb %>
<div class="space-y-6">
  <%# Header %>
  <%= render "shared/page_header",
             title: "People",
             subtitle: "#{@pagy.count} people tracked from meeting documents" %>

  <%# People Grid %>
  <% if @people.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
      <% @people.each do |person| %>
        <%= link_to town_person_path(current_town, person), class: "card bg-base-100 border border-base-200 shadow-sm card-hover" do %>
          <div class="card-body p-4">
            <div class="flex items-start gap-3">
              <%= avatar(person.name, size: :lg) %>
              <div class="flex-1 min-w-0">
                <h3 class="font-bold text-base truncate"><%= person.name %></h3>
                <p class="text-xs text-base-content/60 truncate mt-0.5">
                  <%= person.primary_governing_body&.name %>
                </p>

                <div class="flex flex-wrap items-center gap-2 mt-2">
                  <span class="badge badge-ghost badge-sm gap-1">
                    <%= icon("document", size: "w-3 h-3") %>
                    <%= person.document_appearances_count %> doc<%= person.document_appearances_count == 1 ? "" : "s" %>
                  </span>

                  <% if person.roles_held.any? %>
                    <% person.roles_held.first(2).each do |role| %>
                      <%= role_badge(role) %>
                    <% end %>
                  <% end %>
                </div>

                <% if person.first_seen_at && person.last_seen_at %>
                  <p class="text-xs text-base-content/50 mt-2">
                    <% if person.first_seen_at == person.last_seen_at %>
                      <%= person.first_seen_at.strftime("%b %Y") %>
                    <% else %>
                      <%= person.first_seen_at.strftime("%b %Y") %> - <%= person.last_seen_at.strftime("%b %Y") %>
                    <% end %>
                  </p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <%= render "shared/pagination", pagy: @pagy, url_builder: ->(page) { pagy_url_for(@pagy, page) } %>
  <% else %>
    <% action_content = capture do %>
      <%= link_to town_documents_path(current_town), class: "btn btn-primary" do %>
        <%= icon("document", size: "w-4 h-4") %>
        View Documents
      <% end %>
    <% end %>
    <%= render "shared/empty_state",
               icon_name: "users",
               title: "No People Yet",
               description: "People will appear here as documents are processed. Each attendee from meeting minutes and agendas will be tracked.",
               action: action_content %>
  <% end %>
</div>
